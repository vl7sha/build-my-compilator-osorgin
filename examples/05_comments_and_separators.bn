begin
  a, b, c : %;

  { многострочный комментарий:
    проверяем, что лексер пропускает всё до закрывающей }
  read(a, b, c)

  { разделители внутри "составного": ':' и перевод строки }
  a ass 1 : b ass 2
  c ass a plus b

  { и обычный разделитель элементов программы ';' }
  write(a, b, c);
  write( (a plus b) mult c )
end

